<?xml version="1.0" encoding="utf-8"?>    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
        
    
          <ListView
      		android:id="@+id/restaurants"
      		android:layout_width="match_parent"
        android:layout_height="match_parent" />
          
          <Button android:id="@+id/flip_button"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Flip" />
          
          <ViewFlipper android:id="@+id/flip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    
        
	
       	
           
               <TextView android:text="@string/name_tag" />
               <EditText android:id="@+id/name"
                   android:inputType="textCapWords" />
 
           
 
               <TextView android:text="@string/addr_tag" />
               <AutoCompleteTextView android:id="@+id/addr"
                   android:inputType="textPostalAddress" />	
 
  			
 
               <TextView android:text="@string/type_tag" />
               <RadioGroup android:id="@+id/types"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" >
                   
                   <RadioButton android:id="@+id/take_out"
                       android:checked="true"
                       android:text="@string/take_out" />
                   
                   <RadioButton android:id="@+id/sit_down"
                       android:text="@string/sit_down" />
                   
                   <RadioButton android:id="@+id/delivery"
                       android:text="@string/delivery" />
               </RadioGroup>

			
           <Button android:id="@+id/save"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/save_button_title" />
            
	
            </ViewFlipper>

            
</LinearLayout>
	            